<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
 * @author SG Lee
 * @since 2013
 * @description
 * general purpose mapper
-->
 
<mapper namespace="org.chronotics.db.mybatis.app.MapperMySQL">

<!-- 	
	Please note the difference between using #{} and ${}. 
	Hashtags sign means a prepared statement variables, while dollar sign means a simple string replace.
	like pair and sigle value
-->  

  <select id="selectOne" parameterType="map" resultType="map">
  <!-- example -->
  <!-- 
    SELECT 
    FROM ${table}
    WHERE 
    name = #{name}
  -->
	SELECT
	<!-- List -->
	<foreach index="index" item="item" collection="selectColumn" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	FROM
	<foreach index="index" item="item" collection="tableName" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	<if test = "whereCondition != null">
		WHERE
		<!-- List -->
		<foreach index="index" item="item" collection="whereCondition" open="" separator="" close="">
			${item}
		</foreach>
	</if>
	<if test = "orderBy != null">
		ORDER BY
		<!-- List -->
		<foreach index="index" item="item" collection="orderBy" open="" separator="," close="">
			<if test = "item != null">
				${item}
			</if>
		</foreach>
	</if>
	<if test = "orderByAscOrDec != null">
		<!-- List -->
		<foreach index="index" item="item" collection="orderByAscOrDec" open="" separator="," close="">
			<if test = "item != null">
				<if test = "index == 0">
					${item}
				</if>
			</if>
    	</foreach>
	</if>
	<if test = "innerJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "leftJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "rightJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "fullOuterJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "ON != null">
		<!-- List -->
		<foreach index="index" item="item" collection="ON" open="" separator="" close="">
			<if test = "item != null">
				${item}
			</if>
    	</foreach>
	</if>
  </select>
  
  <select id="select" parameterType="map" resultType="map">
  <!-- example -->
  <!-- 
    SELECT 
    FROM ${table}
    WHERE 
    name = #{name}
  -->
	SELECT
	<!-- List -->
	<foreach index="index" item="item" collection="selectColumn" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	FROM <!-- ${tableName} -->
	<!-- List -->
	<foreach index="index" item="item" collection="tableName" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	<if test = "whereCondition != null">
		WHERE
		<!-- List -->
		<foreach index="index" item="item" collection="whereCondition" open="" separator="" close="">
			${item}
		</foreach>
	</if>
	<if test = "orderBy != null">
		ORDER BY
		<!-- List -->
		<foreach index="index" item="item" collection="orderBy" open="" separator="," close="">
			<if test = "item != null">
				${item}
			</if>
		</foreach>
	</if>
	<if test = "orderByAscOrDec != null">
		<!-- List -->
		<foreach index="index" item="item" collection="orderByAscOrDec" open="" separator="," close="">
			<if test = "item != null">
				<if test = "index == 0">
					${item}
				</if>
			</if>
    	</foreach>
	</if>
	<if test = "innerJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "leftJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "rightJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "fullOuterJoin != null">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
	</if>
	<if test = "ON != null">
		<!-- List -->
		<foreach index="index" item="item" collection="ON" open="" separator="" close="">
			<if test = "item != null">
				${item}
			</if>
    	</foreach>
	</if>
  </select>
  
  <select id="selectWithStatement" parameterType="map" resultType="map">
    SELECT ${statement}
  </select>
  
  <insert id="insert" parameterType="map">
  <!-- example -->
  <!--     
	INSERT INTO #{tableName}
    (
    #{variableName},
    #{variableName},
    #{variableName}
    )
    VALUES
    (
    #{variableValue},
    #{variableValue},
    #{variableValue}
    )
  -->
	INSERT INTO <!-- ${tableName} -->
	<!-- List -->
	<foreach index="index" item="item" collection="tableName" open="" separator="" close="">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
    </foreach>
    (
    <!-- List -->
    <foreach index="index" item="item" collection="variableNameForInsert" open="" separator="," close="">
    	${item}
    </foreach>
    )
    VALUES
    <!-- List -->
	<foreach index="index" item="item" collection="variableValueForInsert" open="(" separator="," close=")">
		#{item}
	</foreach>
  </insert>
  
  <insert id="insertWithStatement" parameterType="map">
    INSERT ${statement}
  </insert>
  
  <update id="update" parameterType="map">
  <!-- example -->
  <!--
    UPDATE ${table}
    WHERE 
    name = #{name}
  --> 
	UPDATE
	<!-- List -->
	<foreach index="index" item="item" collection="tableName" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	<if test = "setCondition != null">
		SET
		<!-- Map -->
	    <foreach index="key" item="item" collection="setCondition" open="" separator="," close="">
	    	${key} = #{item}
	    </foreach>
	</if>
	<if test = "whereCondition != null">
		WHERE
		<!-- List -->
		<foreach index="index" item="item" collection="whereCondition" open="" separator="" close="">
			${item}
		</foreach>
	</if>
  </update>

  <update id="updateWithStatement" parameterType="map">
  <!-- example -->
  <!-- 
    UPDATE ${table}
    WHERE 
    name = #{name}
  -->
	UPDATE ${statement}
  </update>
  
  <delete id="delete" parameterType="map">
  <!-- example -->
  <!-- 
    DELETE FROM ${table}
    WHERE 
    name = #{name}
  -->
	DELETE FROM <!-- #{tableName} -->
	<!-- List -->
	<foreach index="index" item="item" collection="tableName" open="" separator="," close="">
		<if test = "item != null">
			${item}
		</if>
    </foreach>
	<if test = "whereCondition != null">
		WHERE
		<!-- List -->
		<foreach index="index" item="item" collection="whereCondition" open="" separator="" close="">
			${item}
		</foreach>
	</if>
  </delete>

  <delete id="deleteWithStatement" parameterType="map">
	DELETE ${statement}
  </delete>
  
  <insert id="insertMultipleItems" parameterType="map">
  <!-- example -->
  <!--   
	INSERT INTO #{tableName}
    (
    #{variableName},
    #{variableName},
    #{variableName}
    )
    VALUES
    (
    #{variableValue},
    #{variableValue},
    #{variableValue}
    ),
    (
    #{variableValue},
    #{variableValue},
    #{variableValue}
    )
    )
  -->
    INSERT INTO <!-- ${tableName} -->
    <!-- List -->
    <foreach index="index" item="item" collection="tableName" open="" separator="" close="">
		<if test = "item != null">
			<if test = "index == 0">
				${item}
			</if>
		</if>
    </foreach>
    (
    <!-- List -->
    <foreach index="index" item="item" collection="variableNameForInsert" open="" separator="," close="">
    	<if test = "item != null">
    		${item}
    	</if>
    </foreach>
    )
    VALUES
    <!-- List -->
	<foreach index="index" item="item" collection="variableValueForInsert" open="" separator="," close="">
 		<foreach index="index" item="variable" collection="item" open="(" separator="," close=")">
			${variable}
		</foreach>
	</foreach>   
  </insert>
  
</mapper>